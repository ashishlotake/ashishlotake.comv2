---
// Component imports
import { SEO } from "astro-seo"
import { Footer } from "@component/global/Footer"
import { Header } from "@component/global/Header"

// Style imports
import "@style/tailwind.css"

// Helper imports
import { seoConfig } from "@util/seoConfig"
import { string } from "astro/zod"

// Props
export interface Props {
	/** Title of the page. */
	title: string

	/** Specific OpenGraph page title. */
	/* The title of your object as it should appear within the graph */
	ogTitle?: string

	/** Description of the page. */
	description?: string

	imageSRC?: string

	imageALT?: string

	/** Image thumbnail for the page. */
	// image?: {
	// 	src: string
	// 	alt: string
	// }

	/** Whether or not to disable indexing */
	disableIndexing?: boolean
}

const {
	title,
	imageSRC,
	imageALT,
	ogTitle,
	description,
	// image,
	disableIndexing = false
} = Astro.props as Props

const makeTitle = title
	? title + " | " + "Ashish Lotake Digital Garden"
	: "My Portfolio"

const makeDesc = description ? description : seoConfig.description

const img = imageSRC ? imageSRC : seoConfig.image.url

const alt = imageALT ? imageALT : seoConfig.image.alt
---

<html lang="en">
	<head>
		<!-- SEO. -->
		<SEO
			title={makeTitle}
			description={makeDesc}
			noindex={disableIndexing}
			nofollow={disableIndexing}
			openGraph={{
				basic: {
					title: `${makeTitle}`,
					type: "website",
					image:
						`${seoConfig.baseURL}${img}` ||
						`${seoConfig.baseURL}${seoConfig.image.url}`
				},
				image: {
					width: seoConfig.image.width,
					height: seoConfig.image.height,
					alt: `${alt}`
				},
				article: {
					// publishedTime: "2021-09-22",
					// modifiedTime: "2021-09-22",
					authors: ["Ashish Lotake"]
					// tags: ["Spy fiction", "Thriller"]
				},
				optional: {
					siteName: "Ashish Lotake Digital Garden"
					// description: makeDesc
				}
			}}
			twitter={{
				card: seoConfig.twitter.card
			}}
		/>

		<!-- Global meta tags. -->
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<!-- <meta name="author" content="Ashish Lotake" /> -->
		<!-- Favicons. -->
		<link
			rel="apple-touch-icon"
			sizes="57x57"
			href="/favicons/favicon-57x57.png"
		/>
		<link
			rel="apple-touch-icon"
			sizes="60x60"
			href="/favicons/favicon-60x60.png"
		/>
		<link
			rel="apple-touch-icon"
			sizes="72x72"
			href="/favicons/favicon-72x72.png"
		/>
		<link
			rel="apple-touch-icon"
			sizes="76x76"
			href="/favicons/favicon-76x76.png"
		/>
		<link
			rel="apple-touch-icon"
			sizes="114x114"
			href="/favicons/favicon-114x114.png"
		/>
		<link
			rel="apple-touch-icon"
			sizes="120x120"
			href="/favicons/favicon-120x120.png"
		/>
		<link
			rel="apple-touch-icon"
			sizes="144x144"
			href="/favicons/favicon-144x144.png"
		/>
		<link
			rel="apple-touch-icon"
			sizes="152x152"
			href="/favicons/favicon-152x152.png"
		/>
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/favicons/favicon-180x180.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="16x16"
			href="/favicons/favicon-16x16.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href="/favicons/favicon-32x32.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="96x96"
			href="/favicons/favicon-96x96.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="192x192"
			href="/favicons/favicon-192x192.png"
		/>
		<link
			rel="shortcut icon"
			type="image/x-icon"
			href="/favicons/favicon.ico"
		/>
		<link rel="icon" type="image/x-icon" href="/favicons/favicon.ico" />
		<meta name="msapplication-TileColor" content="#ffffff" />
		<meta
			name="msapplication-TileImage"
			content="/favicons/favicon-144x144.png"
		/>
		<meta name="msapplication-config" content="/browserconfig.xml" />
		<link rel="icon" type="image/svg+xml" href="/favicons/favicon.svg" />
		<meta name="theme-color" content="#323233" />

		<!-- Service worker registration. -->

		<script is:inline src="/registerSW.js"></script>
		<link rel="manifest" href="/manifest.webmanifest" />

		<style lang="scss" is:global>
			body {
				.accordion__item {
					margin-top: 0em;
					margin-bottom: 0em;
					background-color: white;

					&.is-active button {
						// background-color: #e9e9e9;
					}
					&.is-active .accordion__panel {
						background-color: white;
					}

					.accordion__panel .panel__inner {
						padding-top: 0em;
					}
					&.is-active h3 {
						margin-bottom: 0em;
						margin-top: 0em;
					}
					h3 {
						margin-top: 0em;
						margin-bottom: -0.14em;
						font-size: medium;
						font-weight: 600;
						color: #6b7280;
					}
				}
				.accordion {
					.accordion__wrapper {
						padding-left: 0em;
					}
					li {
						list-style-type: none;
						padding-left: 0;
					}
				}
			}
		</style>
		<style lang="scss" is:global>
			body .accordion__wrapper > .accordion__item {
				button {
					border-color: #e5e7eb;
				}
				&.is-active button {
					border-color: #e5e7eb;
				}
				.accordion__panel {
					border-color: #e5e7eb;
				}
				&:first-child {
					button {
						border-top-right-radius: 10px;
						border-top-left-radius: 10px;
						// border-color: aqua;
					}
				}

				&:last-child {
					.accordion__panel {
						border-bottom-right-radius: 10px;
						border-bottom-left-radius: 10px;
					}
					button {
						border-bottom-right-radius: 10px;
						border-bottom-left-radius: 10px;
						border-color: #e5e7eb;
					}
					&.is-active button {
						border-bottom-right-radius: 0px;
						border-bottom-left-radius: 0px;
					}
				}
			}
		</style>
		<style lang="scss" is:global>
			body {
				.modal__inner {
					// color: purple;
					background-color: white;
					border-width: 2px;
					overflow: hidden;
					border-color: #d1d5db;
					box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1),
						0 4px 6px -4px rgb(0 0 0 / 0.1);
				}

				.modal__content {
					gap: 1.5rem;
					padding: 1rem;
				}

				.modal__close button {
					text-align: center;
					background-color: #d1d5db;

					&:hover,
					&:focus {
						background-color: #f3f4f6;
						text-decoration: none;
					}
				}
			}
		</style>
		<style lang="scss" is:global>
			body {
				.notification {
					padding-top: 0em;
					padding-bottom: 0em;
				}
			}
		</style>
	</head>
	<script async defer src="https://buttons.github.io/buttons.js"></script>

	<body
		class="min-h-screen flexflex-col w-full overflow-x-hidden bg-fixed bg-gradient-to-br from-indigo-50 via-white to-cyan-100"
	>
		<main class="flexflex-1 lex-col h-[100%] w-full">
			<Header />
			<slot />
		</main>
		<Footer />

		<script>
			// This is a hack to get vite-plugin-pwa to generate a sw.js file.
			// Do not remove this script tag.
		</script>
	</body>
</html>
