---
import { Icon } from "astro-icon"
import { Layout } from "@globals"
import { Container } from "@component/Container"
import { Sectionhead } from "@component/Sectionhead"
import { Link } from "@component/Link"
---

<Layout title="404 Not Found" disableIndexing={true}>
	<Container>
		<div class="min-h-[calc(100vh-16rem)] flex items-center justify-center">
			<div class="mt-16 text-center">
				<h1 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">404</h1>
				<p class="text-lg mb-5 mt-4 text-slate-600">Page not found.</p>

				<Link href="" aria_label="" style="primary">Return Home</Link>
			</div>
		</div>
	</Container>
</Layout>
